{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./main/",
    "declarationDir": "typings",
    "incremental": true,
    "tsBuildInfoFile": ".buildcache/main"
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/lib",
    "**/typings",
    "**/bin",
    "**/main",
    "**/module",
    "**/__tests__",
    "**/__stories__",
    "**/*.spec.ts"
  ]
}
