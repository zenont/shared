{
  "extends": "./tsconfig.settings.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "lib": ["dom"],
    "baseUrl": ".",
    "paths": {
      "@ztr/*": ["packages/*/src/"]
    },
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/dist",
    "**/lib",
    "**/typings",
    "**/bin",
    "**/main",
    "**/module",
    "**/.buildcache",
    "**/__tests__",
    "**/__stories__",
    "**/*.spec.ts"
  ]
}
