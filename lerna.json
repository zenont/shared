{
  "packages": [
    "packages/*"
  ],
  "version": "1.0.0-alpha.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "allowBranch": [
        "master"
      ],
      "message": "chore(release): publish %s"
    },
    "version": {
      "allowBranch": [
        "feature/**",
        "release/**",
        "prerelease/**"
      ],
      "message": "chore(bump): bump version %s"
    }
  }
}
