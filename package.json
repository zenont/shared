{
  "repository": "https://github.com/zenont/shared.git",
  "author": "Zenon Trujillo <zenon.t@outlook.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "cleanup": "lerna run cleanup --parallel",
    "reset": "rimraf packages/**/node_modules node_modules",
    "lint:rules": "eslint --fix . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint:format": "prettier --write \"./**/**.{ts,tsx,js,jsx,json,scss,css}\"",
    "lint": "run-s lint:*",
    "typings": "tsc -b tsconfig.build.json",
    "transpile": "lerna run --parallel transpile",
    "build": "run-p transpile typings",
    "watch:lib": "lerna run --parallel transpile -- -w",
    "watch:typings": "tsc -b tsconfig.build.json -w --preserveWatchOutput",
    "watch:concurrent": "concurrently npm:watch:*",
    "watch": "run-s watch:concurrent",
    "dev": "start-storybook",
    "test": "jest --config jest.json",
    "test:dev": "jest --config jest.json -o --coverage --watch",
    "publish:latest:build": "run-s build",
    "publish:latest:lerna": "lerna publish from-package --no-git-reset --dist-tag latest --yes",
    "publish:latest": "run-s publish:latest:*",
    "publish:next:build": "run-s build",
    "publish:next:lerna": "lerna publish from-package --no-git-reset --dist-tag next --yes",
    "publish:next": "run-s publish:latest:*",
    "policy:check:rules": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "policy:check:format": "prettier --check \"./**/**.{ts,tsx,js,jsx,json,scss,css}\"",
    "policy:check:audit": "yarn audit",
    "policy:check:test": "jest --config jest.json --changedSince master --ci --bail --reporters=\"default\"",
    "policy:all": "run-p policy:check:*",
    "policy": "run-s build policy:all",
    "bump": "lerna version latest --conventional-commits --yes"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
