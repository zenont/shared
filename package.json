{
  "name": "kuauitl-shared",
  "description": "Zenon's Shared Libraries",
  "main": "index.js",
  "repository": "https://github.com/zenont/shared.git",
  "author": "Zenon Trujillo <zenon.t@outlook.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "cleanup": "lerna run cleanup --parallel",
    "lint:rules": "eslint --fix . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint:format": "prettier --write \"./**/**.{ts,tsx,js,jsx,json,scss,css}\"",
    "lint": "run-s lint:*",
    "compile:cjs": "tsc -b tsconfig.commonjs.json",
    "compile:es": "tsc -b tsconfig.esnext.json",
    "typings": "tsc -b tsconfig.commonjs.json",
    "build": "run-s compile:cjs compile:es",
    "test": "jest --config jest.json --coverage",
    "publish:latest": "lerna publish from-package --no-git-reset --dist-tag latest --yes",
    "publish:next": "lerna publish from-package --dist-tag next",
    "watch": "tsc -b tsconfig.commonjs.json -w --preserveWatchOutput",
    "concurrent:watch": "concurrently \"npm:watch:*\"",
    "policy:check:rules": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "policy:check:format": "prettier --check \"./**/**.{ts,tsx,js,jsx,json,scss,css}\"",
    "policy:check:audit": "yarn audit",
    "policy:check:test": "jest --config jest.json --changedSince master --ci --bail --reporters=\"default\"",
    "policy:all": "run-p policy:check:*",
    "policy": "run-s build policy:all",
    "bump": "lerna version --dist-tag latest --conventional-commits --yes",
    "bump:patch": "lerna version patch --dist-tag latest --yes",
    "bump:minor": "lerna version minor --dist-tag latest --yes",
    "bump:major": "lerna version major --dist-tag latest --yes"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.5.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.4",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/aws-lambda": "^8.10.23",
    "@types/aws-serverless-express": "^3.3.0",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.6.2",
    "@types/graphql": "^14.2.2",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "@types/react": "^16.8.23",
    "@types/sinon": "^7.0.13",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "aws-sdk": "^2.464.0",
    "babel-jest": "^24.7.1",
    "concurrently": "^4.1.0",
    "core-js": "^3.1.4",
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "graphql": "^14.4.2",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lerna": "^3.13.1",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "regenerator-runtime": "^0.13.2",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.5.3"
  }
}
